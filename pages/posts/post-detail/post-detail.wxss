.container{
  display: flex;
  flex-direction: column;
}

.head-image{
  width: 100%;
  height: 450rpx;
}

.author-date{
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
  margin-left: 30rpx;
  align-items: center;
}

.avatar{
  width: 60rpx;
  height: 60rpx;
}

.author{
  font-size: 30rpx;
  font-weight: bold;
  margin-left: 20rpx;
  color: #666;
}

.const-date{
  font-size: 26rpx;
  margin-left: 20rpx;
  color: #999;
}

.date{
  font-size: 24rpx;
  margin-left: 20rpx;
  color: #999;
}

.title{
  font-size: 30rpx;
  font-weight: bold;
  margin: 10rpx 0 20rpx 35rpx;
  color: #333333;
}

.tool{
  margin-top: 10rpx;
}

.circle-img image{
  width: 90rpx;
  height: 90rpx;
}

.circle-img{
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  margin-right: 40rpx;
}

.horzion{
  width: 660rpx;
  height: 1px;
  margin: 0 auto;
  background-color: #e5e5e5;
  position: relative;
  bottom: 45rpx;
  z-index: -6;
}

.share-img{
  margin-left: 30rpx;
}

.detail{
  color: #666;
  margin: 20rpx 30rpx 0 30rpx;
  font-size: 28rpx;
  line-height: 44rpx;
  letter-spacing: 1px;
}
