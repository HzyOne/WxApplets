.post-container{
  display: flex;
  flex-direction: column;
  margin-top: 30rpx;
  margin-bottom: 40rpx;
  background-color: #ffffff;
  border-top: 1px solid #ededed;
  border-bottom: 1px solid #ededed;
  padding-bottom: 10rpx;
  box-shadow: 0px 0px 10px #a9a9a9;
  border-radius: 10px;
}

.post-author-date{
  margin:10rpx 0 20rpx 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.post-author{
  width: 60rpx;
  height: 60rpx;
  /* vertical-align: middle; */
}

.post-date{
  margin-left: 20rpx;
  font-size:  26rpx;
  /* vertical-align: middle; */
}

.post-title{
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  color: #333333;
}

.post-pic{
  width: 100%;
  height: 450rpx;
  margin-bottom: 15px;
}

.post-content{
  font-size: 28rpx;
  color: #666666;
  letter-spacing: 2rpx;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
}

.post-like{
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 22rpx;
  margin-left: 20rpx;
}

.post-like-pic{
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}

.post-like-font{
  margin-right: 30rpx;
}